@model MyClass.Model.Products

@{
    ViewBag.Title = "Xác nhận xoá sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-wrapper">

        <!-- Main content -->
        <section class="content my-2">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger">XÁC NHẬN XOÁ NHÀ CUNG CẤP NÀY</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <a href="@Url.Action("Index", "Supplier")" class="btn-sm btn-info"> <i class="fa fa-long-arrow-alt-left"></i> Quay lại</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Id)</th>
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.CatID)</th>
                                <th>@Html.DisplayNameFor(model => model.SupplierID)</th>
                                <th>@Html.DisplayNameFor(model => model.Amount)</th>
                                <th>@Html.DisplayNameFor(model => model.Price)</th>
                                <th>@Html.DisplayNameFor(model => model.SalePrice)</th>
                                <th>@Html.DisplayNameFor(model => model.Image)</th>
                                <th>@Html.DisplayNameFor(model => model.Status)</th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr>
                                <td>@Html.DisplayFor(model => model.Id)</td>
                                <td>@Html.DisplayFor(model => model.Name)</td>
                                <td>@Html.DisplayFor(model => model.CatID)</td>
                                <td>@Html.DisplayFor(model => model.SupplierID)</td>
                                <td>@Html.DisplayFor(model => model.Amount)</td>
                                <td>@Html.DisplayFor(model => model.Price)</td>
                                <td>@Html.DisplayFor(model => model.SalePrice)</td>
                                <td><img src="~/Public/img/product/@Model.Image" alt="Img" class="img-fluid" /></td>
                                <td>@Html.DisplayFor(model => model.Status)</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="form-actions no-color">
                        <button class="btn-sm btn-danger" type="submit" name="save"> Xoá [Delete] <i class="fa fa-trash"></i> </button>
                        <!-- /.card-body -->
                    </div>
                </div>
            </div>
            <!-- /.card -->
        </section>
        <!-- /.content -->
    </div><!-- /.content-wrapper -->
}
